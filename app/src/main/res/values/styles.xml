<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.CatzWiki" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/lilac</item>
        <item name="colorOnPrimary">@color/cocoa</item>
        <item name="colorSecondary">@color/lilac</item>
        <item name="colorSecondaryVariant">@color/plum</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">@color/cocoa</item>
        <item name="colorOnBackground">@color/cocoa</item>
        <item name="android:textColor">@color/bark</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/pink</item>
        <item name="android:colorBackground">@color/cocoa</item>
    </style>

    <!-- buttons -->
    <!-- ^ end ^ -->

    <!-- dialog style -->
    <style name="CustomDialogStyle" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/DialogShape</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="buttonBarNeutralButtonStyle">@style/NeutralButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/DialogText</item>
    </style>

    <style name="DialogShape" parent="ShapeAppearanceOverlay">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/corner_radius</item>
    </style>

    <style name="DialogText" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="PositiveButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:backgroundTint">@color/green</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_big</item>
    </style>

    <style name="NeutralButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:backgroundTint">@color/plum</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_big</item>
    </style>

    <style name="NegativeButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:backgroundTint">@color/red</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_big</item>
    </style>
    <!-- ^ end ^ -->

    <!-- edit text style -->

    <!-- ^ end ^ -->

</resources>