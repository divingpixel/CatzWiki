<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.CatzWiki" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/lilac</item>
        <item name="colorOnPrimary">@color/cocoa</item>
        <item name="colorSecondary">@color/lilac</item>
        <item name="colorSecondaryVariant">@color/plum</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">@color/cocoa</item>
        <item name="colorOnBackground">@color/cocoa</item>
        <item name="android:textColor">@color/bark</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/pink</item>
        <item name="android:colorBackground">@color/cocoa</item>
    </style>

    <!-- buttons -->
    <style name="InteractiveButton" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:height">@dimen/button_height</item>
        <item name="cornerRadius">@dimen/button_radius</item>
        <item name="backgroundTint">@color/selector_button</item>
        <item name="android:textColor">@color/selector_text</item>
        <item name="iconTint">@color/selector_text</item>
        <item name="strokeColor">@color/violet</item>
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:ellipsize">none</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minWidth">@dimen/button_minimum_width</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:state_activated">true</item>
        <item name="android:state_enabled">true</item>
        <item name="android:elevation">@dimen/tiny_margin</item>
    </style>
    <!-- ^ end ^ -->

    <!-- dialog style -->
    <style name="CustomDialogStyle" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/DialogShape</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="buttonBarNeutralButtonStyle">@style/NeutralButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/DialogText</item>
    </style>

    <style name="DialogShape" parent="ShapeAppearanceOverlay">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/corner_radius</item>
    </style>

    <style name="DialogText" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="PositiveButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:backgroundTint">@color/green</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_big</item>
    </style>

    <style name="NeutralButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:backgroundTint">@color/plum</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_big</item>
    </style>

    <style name="NegativeButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:backgroundTint">@color/red</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_big</item>
    </style>
    <!-- ^ end ^ -->

    <!-- edit text style -->
    <style name="InputTextBox" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:paddingTop">@dimen/text_margin</item>
        <item name="android:paddingBottom">@dimen/text_margin</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="hintTextColor">@color/white</item>
        <item name="boxStrokeWidth">@dimen/divider_thickness</item>
        <item name="boxStrokeWidthFocused">@dimen/double_thickness</item>
        <item name="boxStrokeColor">@color/selector_edit_box</item>
        <item name="boxStrokeErrorColor">@color/red</item>
        <item name="errorTextColor">@color/red</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body1</item>
        <item name="helperTextTextColor">@color/plum</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="android:textColorHint">@color/plum</item>
        <item name="boxCornerRadiusTopStart">@dimen/corner_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/corner_radius</item>
    </style>

    <style name="InputTextBox.Email" parent="@style/InputTextBox">
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="InputTextBox.Password" parent="@style/InputTextBox">
        <item name="android:inputType">textPassword</item>
    </style>
    <!-- ^ end ^ -->

</resources>